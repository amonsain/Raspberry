#:import FadeTransition kivy.uix.screenmanager.FadeTransition

MyScreenManager:
    transition: FadeTransition()

<RadioScreen>:
    name:'RadioScreen'
    BoxLayout:
        orientation:'vertical'
        Button:
            size_hint:1,0.1  
            on_release: 
                root.manager.transition= FadeTransition()
                root.manager.transition.duration = 1
                root.manager.current = root.manager.next()   
        BoxLayout:
            size_hint:1,0.9  
            orientation:'horizontal'
            BoxLayout:
                size_hint:0.8,1  
                orientation: 'vertical'
                RadioButton:
                    stationid: 1
                    stationname:'France Inter'
                    background_color:[0.91,0,0.18,1]      
                RadioButton:
                    stationname:'France Info'
                    stationid: 2
                    background_color:[1,0.95,0,1]
                RadioButton:
                    stationname:'France Culture'
                    stationid: 3
                    background_color:[0.39,0.11,0.51,1]
                RadioButton:
                    stationname:'France Musique'
                    stationid: 4
                    background_color:[0.63,0,0.22,1]
                RadioButton:
                    stationname:'FIP'
                    stationid: 5
                    background_color:[0.91,0,0.22,1]     
            BoxLayout:
                orientation:'vertical'
                size_hint:0.2,1
                VolumeSlider:
                    id: VolumeSlider
                    orientation:'vertical'
                    size_hint:1,0.85
                Label:
                    text: 'Volume %s' % int(VolumeSlider.value) if VolumeSlider.value else 'Off'
                    size_hint:1,0.15


<WeatherScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint:1,0.1  
            Button:
                on_release: 
                    root.manager.transition= FadeTransition()
                    root.manager.transition.duration = 1
                    root.manager.current = root.manager.next() 
        BoxLayout:
            size_hint:1,0.9
            WeatherDay:
                orientation:'vertical'
                dayid:0
            WeatherDay:
                orientation:'vertical'
                dayid:1
            WeatherDay:
                orientation:'vertical'
                dayid:2
            WeatherDay:
                orientation:'vertical'
                dayid:3