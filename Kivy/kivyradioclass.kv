

<MainLayout>:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint:0.8,0.9
        RadioButton:
            stationid: 1
            stationname:'Station 1'
            background_color:[0.85,0.15,0.3,1]      
        RadioButton:
            stationname:'Station 2'
            stationid: 2
            background_color:[0.35,0.15,0.85,1]
        RadioButton:
            stationname:'Station 3'
            stationid: 3
            background_color:[0.35,0.85,0.15,1]    
    BoxLayout:
        orientation:'vertical'
        size_hint:0.2,0.9
        VolumeSlider:
            id: VolumeSlider
            orientation:'vertical'
            size_hint:1,0.85
        Label:
            text: 'Volume %s' % int(VolumeSlider.value) if VolumeSlider.value else 'Off'
            size_hint:1,0.15
