

<MainLayout>:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint:0.8,0.9
        RadioButton:
            station: 1
            on_press: app.toggle_radio(self.state,self.station)
            on_state: print('state')
            BoxLayout:
                pos: self.parent.pos
                size: self.parent.size
                orientation: 'horizontal'
                Label:
                    font_size: 40
                    width:100
                    text: 'Station 1'
                    color:[1,1,1,1]
                Image:
                    size_hint: 0.2,0.8
                    pos_hint: {'right': 1, 'center_y': .5}                    
                    source: self.parent.parent.icon
        RadioButton:
            text:'Station 2'
            station: 2
            on_press: app.toggle_radio(self.state,self.station)
        RadioButton:
            text:'Station 3'
            station: 3
            on_press: app.toggle_radio(self.state,self.station)
    BoxLayout:
        orientation:'vertical'
        size_hint:0.2,0.9
        Slider:
            id: VolumeSlider
            orientation:'vertical'
            value:25
            step:5
            text:'Hello'
            size_hint:1,0.85
            on_value:app.change_volume(int(self.value))
        Label:
            text: 'Volume %s' % int(VolumeSlider.value) if VolumeSlider.value else 'Off'
            size_hint:1,0.15
