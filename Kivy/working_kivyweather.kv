
<MainLayout>:
	orientation: 'horizontal'
	monlabel1H:monlabel1H
	monlabel1P:monlabel1P
	monlabel2H:monlabel2H
	monlabel2P:monlabel2P
	BoxLayout:
		monlabel1H:monlabel1H
		monlabel1P:monlabel1P
		orientation:'vertical'
		Label:
			text: 'Jour 1'
		Label:
			id: monlabel1H
			#text: 'Temperature Max Jour 1: ' + str(app.dayweatherlist[1].updatetime) + '°C'
			text: 'Time Jour 1: ' + '°C'
		Label:
			id: monlabel1P
			#text: 'Temperature Max Jour 1: ' + str(app.dayweatherlist[1].Picto) + '°C'
			text: 'Time Jour 1: ' + '°C'
	BoxLayout:
		monlabel2H:monlabel2H
		monlabel2P:monlabel2P
		orientation:'vertical'
		Label:
			text: 'Jour 2'
		Label:
			id: monlabel2H
			#text: 'Temperature Max Jour 1: ' + str(app.dayweatherlist[1].updatetime) + '°C'
			text: 'Time Jour 1: ' + '°C'
		Label:
			id: monlabel2P
			#text: 'Temperature Max Jour 1: ' + str(app.dayweatherlist[1].Picto) + '°C'
			text: 'Time Jour 1: ' + '°C'