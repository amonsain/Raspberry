
<MainLayout>:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint:0.8,0.9
        RadioButton:
            id: Btn_FranceInter
            group:'Stations'
            background_normal:''
            background_down:''
            background_color:[0.88,0.13,0.24,1]
            on_press:app.toggle_radio(self.state,1)
            BoxLayout:
                pos: self.parent.pos
                size: self.parent.size
                orientation: 'horizontal'
                Label:
                    font_size: 40
                    width:100
                    text: 'France Inter'
                    color:[1,1,1,1]
                Image:
                    id:ImgID
                    size_hint: 0.2,0.8
                    pos_hint: {'right': 1, 'center_y': .5}                    
                    source:'playbuttonwhite.png'
        RadioButton:
            id: Btn_FranceInfo
            group:'Stations'
            font_size: 40
            text: 'France Info'
            on_press:app.toggle_radio(self.state,2)
        RadioButton:
            id: Btn_FranceCulture
            group:'Stations'
            font_size: 40
            text: 'France Culture'
            on_press:app.toggle_radio(self.state,3)
        RadioButton:
            id: Btn_FranceMusique
            group:'Stations'
            font_size: 40
            text: 'France Musique'
            on_press:app.toggle_radio(self.state,4)
        RadioButton:
            id: Btn_FIP
            group:'Stations'
            font_size: 40
            text: 'FIP'
            on_press:app.toggle_radio(self.state,5)
    BoxLayout:
        orientation:'vertical'
        size_hint:0.2,0.9
        Slider:
            id: VolumeSlider
            orientation:'vertical'
            value:25
            step:5
            text:'Hello'
            size_hint:1,0.85
            on_value:app.change_volume(int(self.value))
        Label:
            text: 'Volume %s' % int(VolumeSlider.value) if VolumeSlider.value else 'Off'
            size_hint:1,0.15
